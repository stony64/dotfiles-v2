{
  // FILE: .vscode/settings.json
  // ──────────────────────────────────────────────────────────────
  // VS CODE WORKSPACE SETTINGS (v1.2.1)
  // ──────────────────────────────────────────────────────────────
  // Zweck:       Synchronisiert Editor-Verhalten mit Projektstandards.
  // Kompatibilität: .editorconfig, .markdownlint.jsonc, .shellcheckrc.
  // ──────────────────────────────────────────────────────────────

  // 1. General Editor & Files (Sicherheits-Standard)
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoGuessEncoding": false,

  // Auto-Save: Verhindert Datenverlust bei SSH-Dropouts
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // 2. File Associations (Syntax-Highlighting für Dotfiles)
  "files.associations": {
    "bashrc": "shellscript",
    "bashenv": "shellscript",
    "bashprompt": "shellscript",
    "bashaliases": "shellscript",
    "bashfunctions": "shellscript",
    "bashwartung": "shellscript",
    ".bash*": "shellscript",
    ".nanorc": "properties",
    ".dircolors": "properties",
    ".editorconfig": "properties",
    ".gitattributes": "properties",
    ".gitignore": "ignore",
    ".shellcheckrc": "properties",
    "*.jsonc": "jsonc"
  },

// 3. Sprachesspezifische Einstellungen
  "[shellscript]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.eol": "\n",
    // Falls foxundermoon nicht erkannt wird, versuche "mads-hartmann.bash-format"
    // oder setze es auf null, damit VS Code dich beim Speichern fragt.
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },

  "[json]": { "editor.tabSize": 2 },
  "[jsonc]": { "editor.tabSize": 2 },

  // 4. Markdown & Linting (Automatisierung)
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false, // Erlaubt Hard-Breaks
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Linter-Anbindung (v1.2.1 Fix für MD036)
  "markdownlint.config": {
    "extends": ".markdownlint.jsonc"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit"
  },

  // Shellcheck Integration
  "shellcheck.run": "onSave",
  "shellcheck.useWorkspaceRootAsWorkdir": true,

  // 5. Explorer & UI (Sauberkeit)
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.pyc": true,
    "**/test_sandbox": false // Sandbox sichtbar lassen für Debugging
  },

  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 100],

  // 6. Spellchecker (CSpell)
  "cSpell.words": [
    "Assemblierung",
    "auxf",
    "bashenv",
    "bashexports",
    "bashfunctions",
    "bashprompt",
    "bashwartung",
    "dircolors",
    "dotfilesctl",
    "Entf",
    "ifconfig",
    "libcolors",
    "libengine",
    "nanorc",
    "uath",
    "Verknüpfungs",
    "Wrappern"
  ]
}
