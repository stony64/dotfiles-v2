#
# ┌───────────────────────────────────────────────────────────────────────────┐
# │ FILE: .editorconfig                                                       │
# │ ZWECK: Konsistente Formatierung über verschiedene Editoren und IDEs hinweg│
# │ STANDARDS: v1.2.1, UTF-8, LF, Cross-Platform Compliance                   │
# └───────────────────────────────────────────────────────────────────────────┘

# Markiert dieses Verzeichnis als Root - Suche nach .editorconfig endet hier.
root = true

# ──────────────────────────────────────────────────────────────
# 1. GLOBALE STANDARDKONFIGURATION
# ──────────────────────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf                # Unix-Zeilenenden erzwingen (essenziell für Shell)
insert_final_newline = true     # POSIX-Standard: Jede Datei endet mit einer Leerzeile
trim_trailing_whitespace = true # Verhindert unnötige Diff-Glitches
indent_style = space            # Leerzeichen statt Tabs (Standard für modernes Dev)
indent_size = 4
tab_width = 4

# ──────────────────────────────────────────────────────────────
# 2. SHELL-SKRIPTE & DOTFILES
# ──────────────────────────────────────────────────────────────
# Stellt sicher, dass alle Skripte und Konfigurationsdateien einheitlich bleiben.
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Erfassung von Dateien ohne Endung oder mit spezifischen Dotfile-Präfixen
[{.bash*,.dircolors,.nanorc,.editorconfig,bashrc,bashenv,bashaliases,bashfunctions,bashprompt}]
indent_style = space
indent_size = 4

# ──────────────────────────────────────────────────────────────
# 3. DOKUMENTATION (MARKDOWN)
# ──────────────────────────────────────────────────────────────
[*.md]
max_line_length = off
# Wichtig: Markdown nutzt zwei Leerzeichen am Zeilenende für Hard-Breaks.
# Daher deaktivieren wir trim_trailing_whitespace hier gezielt.
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

# ──────────────────────────────────────────────────────────────
# 4. DATENSTRUKTUREN & CI/CD (YAML/JSON)
# ──────────────────────────────────────────────────────────────
# YAML und JSON nutzen standardmäßig 2 Leerzeichen.
[*.{yml,yaml,json,jsonc}]
indent_style = space
indent_size = 2

# ──────────────────────────────────────────────────────────────
# 5. WINDOWS NATIVE SKRIPTE
# ──────────────────────────────────────────────────────────────
# Falls PowerShell oder Batch-Dateien nativ für Windows-Umgebungen bleiben:
[*.{bat,ps1}]
end_of_line = crlf

# ──────────────────────────────────────────────────────────────
# 6. BUILD-SYSTEME (SPECIALS)
# ──────────────────────────────────────────────────────────────
[{Makefile,makefile}]
# Makefiles funktionieren NUR mit echten Tab-Zeichen (Hard-Tabs).
indent_style = tab
indent_size = 4
